<div class="private-square span4 offset2 text-center">
  
  <h1>
  Upload an Image
</h1>
  
  <br/>

<%= simple_form_for @post do |f| %>
  <%= f.input :title, label: 'Title of Picture', placeholder: 'Who is this?' %>
  <br/>
  <%= f.input :description, label: 'What is happening?', placeholder: 'e.g. Lazers' %>
  <br/>
  <%= f.input :image %>
  <br/>
  <%= f.button :submit, :class => 'btn btn-danger btn-large' %>
  <br/>
<% end %>
  
</div>